		"@types/mongoose": "^5.11.97",
		"apollo-server-core": "^3.12.0",
		"apollo-server-express": "^3.12.0",
		"axios": "^1.2.1",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"envfile": "^6.18.0",
		"express": "^4.18.2",
		"form-data": "^4.0.0",
		"graphql": "^16.7.1",
		"graphql-request": "^5.0.0",
		"helmet": "^6.0.1",
		"joi": "^17.7.0",
		"mongoose": "^7.3.1",
		"morgan": "^1.10.0",
		"multer": "^1.4.5-lts.1",
		"multer-s3": "^3.0.1",
		"napi-nanoid": "^0.0.4",
		"node-cache": "^5.1.2",
		"nodemailer": "^6.8.0",
		"pg": "^8.11.1",
